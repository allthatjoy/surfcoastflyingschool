---
import ContactForm from '../../components/forms/ContactForm.astro';
import Layout from '../../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
	title: 'Contact | Astro Odyssey Theme',
	description: 'Contact Page',
};
---

<Layout seo={seo}>
	<Container>
		<section class="contact-hero__section">
			<div class="contact-hero__text-section">
				<h1>Contact Us</h1>
				<p>
					Located at the Barwon Heads Airport, Surf Coast Flying School is easily accessible and offers ample facilities to ensure a comfortable and enjoyable experience for all our students.
				</p>
				<div>
					<em>
						1405 Barwon Heads Rd, Connewarre VIC 3227, Australia<br>
             <br>
             03 1234 5678
             <br>
             surfcoastflyingschool@yahoo.com
            <br>
            <em>
					</p>
				</div>
			</div>
			<div class="col-2__container">
				<div class="hero-section__image">
				<picture>
					<img
						src="/assets/images/image2.jpeg"
						alt="Surf Coast Flying School"
						id="home-hero-image"
					/>
				</picture>
		</div>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.contact-hero__section {
		margin: var(--section-margin) auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		min-height: calc(90vh - var(--navbar-height));
		gap: 3rem;
	}
	.contact-hero__text-section {
		padding: 2rem;
		display: flex;
		flex-direction: column;
		justify-content: center;
		background-color: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.col-2__container {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	@media (max-width: 768px) {
		.contact-hero__section {
			grid-template-columns: 1fr;
		}
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
</style>
